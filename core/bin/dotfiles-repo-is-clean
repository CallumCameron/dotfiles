#!/bin/bash
# Check if a git repository is clean

test -z "${1}" && exit 1
type git &>/dev/null || exit 1

if [ -d "${1}" ]; then
    cd "${1}" || exit 1

    TMPFILE="$(mktemp)"
    git status --porcelain -b > "${TMPFILE}"

    if grep -q '^##.*\[ahead.*\]$' "${TMPFILE}" || grep -q '^[^##]' "${TMPFILE}"; then
        rm "${TMPFILE}"
        exit 1
    else
        rm "${TMPFILE}"
        exit 0
    fi
fi

exit 0
