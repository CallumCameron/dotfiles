#!/usr/bin/env python
# Add a value to a gsettings list, but only if it isn't there already

import sys
import os.path
import subprocess
import ast

def usage():
    print "Usage: " + os.path.basename(sys.argv[0]) + " schema key value"
    sys.exit(1)

if len(sys.argv) < 4:
    usage()

schema = sys.argv[1]
key = sys.argv[2]
value = sys.argv[3]

def gsettingsGetList(schema, key):
    s = subprocess.check_output(["gsettings", "get", schema, key]).strip()
    if s == "@as []":
        s = "[]"
    return ast.literal_eval(s)

l = gsettingsGetList(schema, key)

if value not in l:
    l.append(value)

subprocess.call(["gsettings", "set", schema, key, str(l)])
